<%= form_for [@product] do |f| %>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
    <%= f.label :"Product Name" %>
    <%= f.text_field :name %>
    </li>
    <li class="list-group-item">
    <%= f.label :"Product Price" %>
    <%= f.number_field :cost %>
    </li>
    <li class="list-group-item">
    <%= f.label :"Nationality" %>
    <%= f.text_field :country_of_origin %>
    </li>
    <li class="list-group-item"><%= f.submit %></li>
  </ul>
<% end %>
