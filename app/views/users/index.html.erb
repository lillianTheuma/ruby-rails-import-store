<div class="row">
  <div class="col-8">
    <div class="card">
      <div class="card-header">
      </div> <!-- class = card-header -->
      <div class="card-body">
      </div><!-- class = card-body -->
    </div><!-- class = card -->
  </div>
  <div class="col-4">
      <div class="card">
        <div class="card-header">
          <h4> List of current users </h4>
        </div> <!-- class = card-header -->
        <div class="card-body">
          <ul class="list-group list-group-flush">
          <% if @users.any? %>
            <% @users.each do |user| %>
              <li class="list-group-item">
                <a href="/users/<%=user.id%>"><%= user.email %> - ID :<%=user.id%></a>
              </li>
            <% end %>
          <% else %>
            <li class="list-group-item"> there are no users </li>
          <% end %>
        </ul>
        </div><!-- class = card-body -->
      </div><!-- class = card -->
  </div>
</div><!-- class = row -->
